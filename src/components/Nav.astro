---

<header
  class="nav-header fixed top-0 left-0 right-0 bg-background/80 backdrop-blur-sm z-50 border-b border-foreground/10"
>
  <nav class="container-site py-6">
    <div class="flex items-center justify-between">
      <a
        href="/"
        class="logo font-display text-2xl font-semibold text-foreground hover:text-primary transition-colors"
      >
        web dev.
      </a>

      <ul class="hidden md:flex items-center gap-8">
        {
          navItems.map((item, index) => (
            <li class="nav-item" style={`animation-delay: ${index * 0.1}s`}>
              <a
                href={item.href}
                class={`nav-link text-sm tracking-wide transition-all relative px-4 py-2 bg-foreground text-background font-display font-semibold hover:bg-foreground/90`}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>

      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-foreground hover:text-primary transition-colors"
        aria-label="Toggle menu"
      >
        <svg
          class="menu-icon w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            class="line line-1"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16"></path>
          <path
            class="line line-2"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 12h16"></path>
          <path
            class="line line-3"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 18h16"></path>
        </svg>
      </button>
    </div>

    <div
      id="mobile-menu"
      class="mobile-menu hidden md:hidden pt-4 pb-4 overflow-hidden border-t border-foreground/10"
    >
      <ul class="flex flex-col gap-4">
        {
          navItems.map((item, index) => (
            <li
              class="mobile-nav-item"
              style={`animation-delay: ${index * 0.05}s`}
            >
              <a
                href={item.href}
                class={`text-sm tracking-wide transition-colors block ${
                  currentPath === item.href
                    ? "text-primary font-medium"
                    : "text-foreground/60 hover:text-foreground"
                }`}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>

      <!-- Mobile Social Icons -->
      <div class="flex items-center gap-4 py-5 mb-4">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-foreground/60 hover:text-primary transition-colors"
              aria-label={link.name}
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d={link.icon} />
              </svg>
            </a>
          ))
        }
      </div>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");
  const menuIcon = button?.querySelector(".menu-icon");

  button?.addEventListener("click", () => {
    const isOpen = !menu?.classList.contains("hidden");

    if (isOpen) {
      menu?.classList.add("closing");
      setTimeout(() => {
        menu?.classList.add("hidden");
        menu?.classList.remove("closing");
      }, 300);
    } else {
      menu?.classList.remove("hidden");
      setTimeout(() => menu?.classList.add("opening"), 10);
    }

    menuIcon?.classList.toggle("open");
  });
</script>

<style>
  .nav-header {
    animation: slideDown 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
  }

  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .logo {
    animation: fadeIn 0.6s ease 0.3s forwards;
    opacity: 0;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  .nav-item {
    animation: fadeInDown 0.4s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
    opacity: 0;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: currentColor;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .mobile-menu.opening {
    animation: slideDownMenu 0.3s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
  }

  .mobile-menu.closing {
    animation: slideUpMenu 0.3s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
  }

  @keyframes slideDownMenu {
    from {
      max-height: 0;
      opacity: 0;
    }
    to {
      max-height: 400px;
      opacity: 1;
    }
  }

  @keyframes slideUpMenu {
    from {
      max-height: 400px;
      opacity: 1;
    }
    to {
      max-height: 0;
      opacity: 0;
    }
  }

  .mobile-nav-item {
    animation: fadeInLeft 0.3s ease forwards;
    opacity: 0;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .menu-icon .line {
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .menu-icon.open .line-1 {
    transform: rotate(45deg) translateY(7px);
  }

  .menu-icon.open .line-2 {
    opacity: 0;
  }

  .menu-icon.open .line-3 {
    transform: rotate(-45deg) translateY(-7px);
  }
</style>
