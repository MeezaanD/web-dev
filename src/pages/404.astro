---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <div
    class="min-h-screen container-site section-padding flex items-center justify-center"
  >
    <div class="text-center max-w-4xl">
      <div class="mb-8">
        <div class="inline-block mb-6">
          <span
            class="text-sm font-medium text-foreground bg-foreground/10 px-4 py-2 rounded-full"
          >
            404 Error
          </span>
        </div>

        <h1
          class="text-5xl md:text-6xl font-display font-semibold text-foreground mb-4"
        >
          Page Not Found
        </h1>
        <p class="text-lg text-foreground/70 mb-8">
          The page you’re looking for doesn’t exist, or it may have been moved.
        </p>
      </div>

      <a
        href="/"
        class="inline-flex items-center gap-2 px-4 py-2 bg-foreground text-background font-display font-semibold hover:bg-foreground/90 transition-colors"
      >
        Back to Home
      </a>
    </div>
  </div>
</Layout>
